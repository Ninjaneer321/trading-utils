study(title="[TVT] Multiple MA", shorttitle="MMAs", overlay=true)
exponential = input(true, title="Exponential MA")

src = close

ma3 = exponential ? ema(src, 3) : sma(src, 3)
ma8 = exponential ? ema(src, 8) : sma(src, 8)
ma21 = exponential ? ema(src, 21) : sma(src, 21)
ma50 = exponential ? ema(src, 50) : sma(src, 50)
ma60 = exponential ? ema(src, 60) : sma(src, 60)
ma70 = exponential ? ema(src, 70) : sma(src, 70)
ma80 = exponential ? ema(src, 80) : sma(src, 80)
ma90 = exponential ? ema(src, 90) : sma(src, 90)
ma100 = exponential ? ema(src, 100) : sma(src, 100)
ma200 = exponential ? ema(src, 200) : sma(src, 200)

plot(ma3, color=red, style=line, title="MMA3", linewidth=1)
plot(ma8, color=blue, style=line, title="MMA8", linewidth=1)
plot(ma21, color=green, style=line, title="MMA21", linewidth=1)
plot(ma50, color=fuchsia, style=line, title="MMA50", linewidth=2)
plot(ma60, color=teal, style=line, title="MMA60", linewidth=1)
plot(ma70, color=yellow, style=line, title="MMA70", linewidth=1)
plot(ma80, color=navy, style=line, title="MMA80", linewidth=1)
plot(ma90, color=maroon, style=line, title="MMA90", linewidth=1)
plot(ma100, color=purple, style=line, title="MMA100", linewidth=1)
plot(ma200, color=black, style=line, title="MMA200", linewidth=3)
